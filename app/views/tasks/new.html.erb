<h1>Nova Tarefa</h1>

<%= form_with(model: @task, local: true, class: "row g-3 needs-validation") do |f| %>
  <div class="col-md-6">
    <%= f.label :titulo, "Título", class: "form-label" %>
    <%= f.text_field :titulo, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Informe um título válido.
    </div>
  </div>

  <div class="col-md-6">
    <%= f.label :descricao, "Descrição", class: "form-label" %>
    <%= f.text_field :descricao, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Informe uma descrição válida.
    </div>
  </div>

  <div class="col-md-6">
    <%= f.label :status, "Status", class: "form-label" %>
    <%= f.select :status, [["Pendente", "pendente"], ["Em andamento", "andamento"], ["Concluída", "concluida"]], 
                  { prompt: "Selecione um status" }, class: "form-select", required: true %>
    <div class="invalid-feedback">
      Selecione um status válido.
    </div>
  </div>

  <div class="col-12">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
