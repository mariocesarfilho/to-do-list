<h1>Detalhes da Tarefa</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @task.titulo %></h5>
    <p class="card-text"><strong>Descrição:</strong> <%= @task.descricao %></p>
    <p class="card-text"><strong>Status:</strong> <%= @task.status ? "Concluída" : "Pendente" %></p>
  </div>
</div>

<div class="mt-3">
  <div class="btn-group">
    <%= link_to "Voltar", tasks_path, class: "btn btn-secondary" %>
    <%= link_to "Editar", edit_task_path(@task), class: "btn btn-warning" %>
    <%= button_to "Excluir", task_path,
                method: :delete,
                data: { confirm: "Tem certeza que deseja excluir esta tarefa?" },
                 class: "btn btn-danger" %>
  </div>
</div>
