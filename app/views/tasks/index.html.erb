<h1 class="mb-3">Lista de Tarefas</h1>

<div class="mb-3">
  <%= link_to "Nova Tarefa", new_task_path, class: "btn btn-success" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Título</th>
      <th>Descrição</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each_with_index do |task, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= task.titulo %></td>
        <td><%= task.descricao %></td>
        <td><%= task.status ? "Concluída" : "Pendente" %></td>
        <td>
          <%= link_to "Mostrar", task_path(task), class: "btn btn-sm btn-primary" %>
          <%= link_to "Editar", edit_task_path(task), class: "btn btn-sm btn-warning" %>
          <%= link_to "Excluir", task_path(task),
                      method: :delete,
                      data: { confirm: "Tem certeza?" },
                      class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
