<h1>Editar Tarefa</h1>

<%= form_with(model: @task, local: true, class: "row g-3 needs-validation") do |f| %>
  <div class="col-md-6">
    <%= f.label :titulo, "Título", class: "form-label" %>
    <%= f.text_field :titulo, class: "form-control", required: true %>
    <div class="invalid-feedback">Informe um título válido.</div>
  </div>

  <div class="col-md-6">
    <%= f.label :descricao, "Descrição", class: "form-label" %>
    <%= f.text_field :descricao, class: "form-control", required: true %>
    <div class="invalid-feedback">Informe uma descrição válida.</div>
  </div>

  <div class="col-md-6">
    <%= f.label :status, "Status", class: "form-label" %>
    <%= f.select :status, [["Pendente", false], ["Concluída", true]],
                { prompt: "Selecione um status" },
                class: "form-select" %>
    <div class="invalid-feedback">Selecione um status válido.</div>
  </div>

  <div class="col-12">
    <%= f.submit "Atualizar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", tasks_path, class: "btn btn-secondary" %>
  </div>
<% end %>
